<header>
  <h1>Edit Post</h1>
</header>
<%= simple_form_for(@post) do |f| %>
  <%= f.input :title %>
  <!-- Put this line back if you want the input responsive to different screen size -->
  <!--<%= f.input :body, as: :text, autofocus: true, :input_html => {:style => 'width: 100%', :rows => 15} %>-->
  <%= f.input :body, as: :text, autofocus: true, :input_html => {:style => 'width: 200%', :rows => 18} %>
  <% if policy(@post).update? -%>
    <%= f.button :submit, class: "btn-primary" %> <%= link_to "Cancel", root_path, class: "btn btn-default"  %>
  <% end %>
<% end %>
