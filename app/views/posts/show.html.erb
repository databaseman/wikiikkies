<!--title() is defined in application_helper.rb format-->
<% title(@post.title, "Post") %>
<h1><%= @post.title %></h1>
<%= link_to "Edit Post", edit_post_path(@post) %>
<%= link_to "Delete Post",
  post_path(@post),
  method: :delete,
  data: { confirm: "Are you sure you want to delete this post?" }
%>
<p><%= @post.body %></p>
