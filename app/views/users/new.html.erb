<header>
  <h1>New User</h1>
</header>
<%= simple_form_for(@user) do |f| %>
  <%= f.input :name  %>
  <%= f.input :email %>
  <%= f.input :password, label: 'Password'%>
  <!-- Only admin can create user -->
  <% if current_user.role?("admin") -%>
    <%= f.button :submit, class: "btn-primary" %> <%= link_to "Cancel", users_index_path, class: "btn btn-default"  %>
  <% end %>
<% end %>
